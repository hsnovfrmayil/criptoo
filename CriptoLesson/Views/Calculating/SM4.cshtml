@{
    ViewBag.Title = "SM4 Algorithm";
}

<h2>@ViewBag.Title</h2>

<!-- Encrypt Section -->
<div class="form-group">
    <label for="inputTextEncrypt">Encrypt Text</label>
    <input type="text" name="inputTextEncrypt" id="inputTextEncrypt" class="form-control" placeholder="Enter text to encrypt" />
</div>
<div class="form-group">
    <label for="key">Key (16 characters)</label>
    <input type="text" name="key" id="key" class="form-control" placeholder="Enter encryption key" />
</div>
<button class="btn btn-success" onclick="encryptData()">Encrypt</button>

<!-- Decrypt Section -->
<div class="form-group mt-4">
    <label for="inputTextDecrypt">Decrypt Text</label>
    <input type="text" name="inputTextDecrypt" id="inputTextDecrypt" class="form-control" placeholder="Enter text to decrypt" />
</div>
<div class="form-group">
    <label for="decryptKey">Key for Decryption</label>
    <input type="text" name="decryptKey" id="decryptKey" class="form-control" placeholder="Enter key for decryption" />
</div>
<button class="btn btn-danger" onclick="decryptData()">Decrypt</button>

@if (ViewBag.Result != null)
{
    <div class="mt-4 result-container">
        <h3>@ViewBag.ResultType</h3>
        <p><strong>Original Text: </strong>@ViewBag.OriginalText</p>
        <p><strong>Encrypted Text: </strong>@ViewBag.EncryptedText</p>
        <p><strong>Encryption Key: </strong>@ViewBag.Key</p>
        <p><strong>Result: </strong><span class="result-text">@ViewBag.Result</span></p>
    </div>
}

<script>
    function encryptData() {
        var inputTextEncrypt = document.getElementById("inputTextEncrypt").value;
        var key = document.getElementById("key").value;

        var url = '@Url.Action("SM4", "Calculating", new { algorithmName = ViewBag.Title })' +
                  '?algorithmName=' + encodeURIComponent('@ViewBag.Title') +
                  '&inputTextEncrypt=' + encodeURIComponent(inputTextEncrypt) +
                  '&key=' + encodeURIComponent(key) +
                  '&actionType=Encrypt';

        window.location.href = url;
    }

    function decryptData() {
        var inputTextDecrypt = document.getElementById("inputTextDecrypt").value;
        var key = document.getElementById("decryptKey").value;

        var url = '@Url.Action("SM4", "Calculating", new { algorithmName = ViewBag.Title })' +
                  '?algorithmName=' + encodeURIComponent('@ViewBag.Title') +
                  '&inputTextDecrypt=' + encodeURIComponent(inputTextDecrypt) +
                  '&key=' + encodeURIComponent(key) +
                  '&actionType=Decrypt';

        window.location.href = url;
    }
</script>

